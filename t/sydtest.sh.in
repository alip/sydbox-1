if [ x"$1" = x"prove" ]; then
    shift
    exec '@SYDBOX_MAKE@' -C '@SYDBOX_TEST_DIRECTORY@' DEFAULT_TEST_TARGET=prove SYDBOX_TEST_OPTS="$@"
else
    exec '@SYDBOX_MAKE@' -C '@SYDBOX_TEST_DIRECTORY@' DEFAULT_TEST_TARGET=test SYDBOX_TEST_OPTS="$@"
fi
